<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>~/database</param-value>
   </context-param>
    
   <servlet>
     <servlet-name>metrics-servlet</servlet-name>
     <servlet-class>com.metricsapp.api.MetricsServlet</servlet-class> 
   </servlet>
   
   <servlet-mapping>
     <servlet-name>metrics-servlet</servlet-name>
     <url-pattern>/createmetric</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
       <servlet-name>metrics-servlet</servlet-name>
       <url-pattern>/addvalue</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
       <servlet-name>metrics-servlet</servlet-name>
       <url-pattern>/getmean</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
       <servlet-name>metrics-servlet</servlet-name>
       <url-pattern>/getmedian</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
       <servlet-name>metrics-servlet</servlet-name>
       <url-pattern>/getmin</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
       <servlet-name>metrics-servlet</servlet-name>
       <url-pattern>/getmax</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
       <servlet-name>metrics-servlet</servlet-name>
       <url-pattern>/printmetric</url-pattern>
   </servlet-mapping>

</web-app>
